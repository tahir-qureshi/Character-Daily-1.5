<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="AppTheme1" >
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Box">
        <item name="android:background">@drawable/box</item>
    </style>

    <style name="Heading">
        <item name="android:textSize">15dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="Light_Heading">
        <item name="android:textSize">12dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="DailLesson_Heading">
        <item name="android:textSize">15dp</item>
        <!--<item name="android:textAlignment">center</item>-->
        <!--<item name="android:gravity">center</item>-->
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="DailLesson_Light_Heading">
        <item name="android:textSize">12dp</item>
        <!--<item name="android:textAlignment">center</item>-->
        <!--<item name="android:gravity">center</item>-->
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="Crumb">
        <item name="android:background">#383838</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Input">
        <item name="android:ems">10</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">5sp</item>
        <item name="android:background">@drawable/box</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Input2">
        <item name="android:ems">10</item>
        <!--<item name="android:textSize">24sp</item>-->
        <item name="android:padding">5sp</item>
        <item name="android:background">@drawable/rectangular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InputSearch">
        <item name="android:background">@drawable/rectangular</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">40sp</item>
    </style>

    <style name="InputGroup">
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BtnPrimary" parent="Btn">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="BtnSuccess" parent="Btn">
        <item name="android:background">@drawable/btn_success</item>
    </style>

    <style name="BtnBlank" parent="Btn">
        <item name="android:textSize">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">#438FF2</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="btn_main">
        <item name="android:background">#A9A9A9</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingLeft">15px</item>
        <item name="android:paddingRight">20px</item>
    </style>

  <style name="text_style">
      <item name="android:fontFamily">sans-serif-condensed</item>
      <item name="android:textStyle">normal</item>
      <item name="android:textColor">#000</item>
  </style>
    <style name="Btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_default</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
